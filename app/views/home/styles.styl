.titlePage, .rogerPage, .gearPage, .artistPage
  height 800px
  position relative
  background-size cover
  background-position center

.titlePage
  background-image url("app/assets/images/guitars.jpeg")

  .titleContainer
    display flex
    align-items center
    justify-content center
    flex-direction column
    position absolute
    height 100%
    width 100%
    text-align center

  h1
    font-size 8rem

  @media screen and (max-width 850px)
    h1
      font-size 5rem

  h2
    font-size 2.5rem
    color white
    text-shadow 0 .2rem .8rem black

  .spotifyPlayer
    position fixed
    top 1rem
    right 1rem
    z-index 100
    border none
    box-shadow 0 .2rem .8rem black

.rogerPage
  background-image url("app/assets/images/light.jpeg")
  box-shadow inset 0 -30rem 10em rgba(black, .8)

  .contentContainer
    position absolute
    left 4rem
    right 4rem
    bottom 2rem
    max-width 800px

  h1
    color white

  p
    color white

    a
      text-decoration underline

  a:hover
    color CornflowerBlue

.artistPage
  background-image url("app/assets/images/exterior.jpeg")
  box-shadow inset 0 -40rem 10em rgba(black, .8)

  .artistList
    position absolute
    bottom 0
    display flex
    flex-direction column
    flex-wrap wrap
    height 360px
    width 100%
    margin 5rem
    font-size 12px
    color white

    div
      margin .15rem

.gearPage
  .slider
    z-index -1
    position absolute
    top 0
    left 0
    max-height 100%
    width 100%

    .sliderImage
      height 800px
      width 100%
      background-size cover
      background-position center

  .overlay
    position absolute
    height 100%
    width 100%
    box-shadow inset 10rem -20rem 20em rgba(black, 1)

  .gearList
    position absolute
    left 4rem
    right 4rem
    bottom 4rem
    display flex
    flex-direction column
    flex-wrap wrap
    justify-content flex-end
    height 600px

    .gearSection
      width 50%

    li
      word-wrap wrap

  h4
    font-family monospace
    letter-spacing 0
    font-size 1.6rem
    color white

  ul
    padding 0
    margin 0 0 2rem

    li
      list-style-type none
      color white

.footer
  background-color black
  display flex
  align-items center
  justify-content flex-start
  padding 4rem
  color white

  a:hover
    color CornflowerBlue
