.titlePage, .rogerPage, .gearPage, .artistPage
  height 1000px
  position relative
  background-size cover
  background-position center

  @media screen and (max-width 850px)
    height 840px

.titlePage
  background-image url("app/assets/images/guitars.jpeg")

  .titleContainer
    display flex
    align-items center
    justify-content center
    flex-direction column
    position absolute
    height 100%
    width 100%
    text-align center

  .aboutContainer
    max-width 600px
    margin 6rem 4rem 0rem
    text-align left
    text-shadow 1px 1px 5px rgba(black, 0.8)
    color white

    a
      text-decoration underline

      &:hover
        color cornflowerBlue



  h1
    font-size 8rem

  @media screen and (max-width 850px)
    h1
      font-size 5rem

  h2
    font-size 2.5rem
    color white
    text-shadow 0 .2rem .8rem black

  .spotifyPlayer
    position fixed
    top 1rem
    right 1rem
    z-index 100
    border none
    box-shadow 0 .2rem .8rem black

.rogerPage
  background-image url("app/assets/images/light.jpeg")
  box-shadow inset 0 -30rem 10em rgba(black, .8)

  .contentContainer
    position absolute
    left 4rem
    right 4rem
    bottom 2rem
    max-width 800px

  h1
    color white

  p
    color white

    a
      text-decoration underline

  a:hover
    color CornflowerBlue

.artistPage
  background-image url("app/assets/images/exterior.jpeg")
  box-shadow inset 0 -40rem 10em rgba(black, .8)

  .artistListContainer
    display flex
    align-items flex-end
    height 90%
    margin 5rem

    @media screen and (max-width 850px)
      margin 2rem

  .artistList
    font-size 13px
    color white
    text-shadow 1px 1px 5px rgba(black, .4)

    h2
      color black
      margin-bottom 8rem

.gearPage
  height auto
  background-color black

  .slider
    z-index 0
    position absolute
    top 0
    left 0
    max-height 100%
    width 100%

    .sliderImage
      height 1000px
      width 100%
      background-size cover
      background-position center

  .overlay
    position absolute
    height 100%
    width 100%
    box-shadow inset 10rem -20rem 20em rgba(black, 1)

  .gearContainer
    padding 4rem 8rem 0

    @media screen and (max-width 850px)
      padding 4rem 2rem

  .gearList
    display flex
    flex-wrap wrap
    align-items flex-start
    justify-content space-around
    color white

    .gearSection
      z-index 1000
      flex 1
      min-width 300px

    li
      word-wrap wrap

  .miscGearSection
    position relative
    z-index 1000
    color white

  h4
    font-family monospace
    letter-spacing 0
    font-size 1.6rem
    color white

  ul
    padding 0
    margin 0 0 2rem

    li
      list-style-type none
      color white

.footer
  background-color black
  display flex
  align-items center
  justify-content flex-start
  padding 4rem
  color white

  a:hover
    color CornflowerBlue
